server {
    listen 80;
    server_name uni-brachbach.de www.uni-brachbach.de raspimusic 192.168.178.40; 
    client_max_body_size 70M;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        alias /home/pi/skg-notenbank/staticfiles/; # Pfad von collectstatic
    }

    location /media/ {
        alias /home/pi/skg-notenbank/media/; # Hier liegen deine PDFs
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/pi/skg-notenbank/gunicorn.sock;
    
        # Diese Zeilen sind entscheidend f√ºr CSRF und Logins:
        # proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
