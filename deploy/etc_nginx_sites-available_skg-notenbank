server {
    listen 80;
    server_name uni-brachbach.de www.uni-brachbach.de raspimusic 192.168.178.40; 
    client_max_body_size 70M;

    location = /favicon.ico { 
        alias /home/pi/skg-notenbank/staticfiles/favicon.png;
        access_log off; log_not_found off; 
    }

    location = /favicon.png {
        alias /home/pi/skg-notenbank/staticfiles/favicon.png;
        access_log off; log_not_found off;
    }


    location /static/ {
        alias /home/pi/skg-notenbank/staticfiles/; # Pfad von collectstatic
    }

    # Sensitive files are served only via Django permission-checked views.
    location ^~ /media/sheet_music/parts/ {
        return 403;
    }

    location ^~ /media/concerts/audio/ {
        return 403;
    }

    location /media/ {
        alias /home/pi/skg-notenbank/media/; # Hier liegen deine PDFs
        expires 7d;
        add_header Cache-Control "public";
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/pi/skg-notenbank/gunicorn.sock;
    
        # Diese Zeilen sind entscheidend f√ºr CSRF und Logins:
        # proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Pufferung einschalten: Nginx saugt die Antwort von Gunicorn 
        # sofort auf und gibt den Gunicorn-Worker wieder frei.
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;

        proxy_connect_timeout 300s;
        proxy_send_timeout    300s;
        proxy_read_timeout    300s;
    }
}
